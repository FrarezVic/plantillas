apiVersion: apps/v1
kind: Deployment
metadata:
  name: <%=micro_nombre%>-deployment
  namespace: <%=micro_namespace%>
  labels:
    app: <%=micro_nombre%>
spec:
  progressDeadlineSeconds: 60
  minReadySeconds: 30
  replicas: 2
  selector:
    matchLabels:
      app: <%=micro_nombre%>
  template:
    metadata:
      labels:
        app: <%=micro_nombre%>
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: nodeInfra
                operator: In
                values:
                - <%=volumen%>
      tolerations:
      - key: "nodeInfra"
        operator: "Equal"
        value: "<%=volumen%>"
        effect: "NoSchedule"
      containers:
      - name: <%=micro_nombre%>
        image: hub.donde.org.mx/<%=micro_nombre%>:1.0.0
        imagePullPolicy: Always
        env:
        - name: NODE_ENV
          value: "desarrollo"
        resources:
          requests:
            memory: 64Mi
            cpu: 50m
          limits:
            memory: 100Mi
            cpu: 100m
        ports:
        - containerPort: 8080
        volumeMounts:
        - mountPath: "/home/node/logs"
          name: logs-<%=volumen%>-storage
        readinessProbe:
          tcpSocket:
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 10
        livenessProbe:
          tcpSocket:
            port: 8080
          initialDelaySeconds: 15
          periodSeconds: 20
      imagePullSecrets:
      - name: storecred
      volumes:
        - name: logs-<%=volumen%>-storage
          persistentVolumeClaim:
            claimName: logs-<%=volumen%>-pvc
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
