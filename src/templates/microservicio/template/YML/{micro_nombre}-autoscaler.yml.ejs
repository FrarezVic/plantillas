apiVersion: autoscaling/v2beta2
kind: HorizontalPodAutoscaler
metadata:
  name: <%=micro_nombre%>-autoscaler
  namespace: <%=micro_namespace%>
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: <%=micro_nombre%>-deployment
  minReplicas: 2
  maxReplicas: 10
  metrics:
  - type: Resource
    resource:
      name: cpu
      target:
        type: Utilization
        averageUtilization: 90
  - type: Resource
    resource:
      name: memory
      target:
        type: Utilization
        averageUtilization: 90